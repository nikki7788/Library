

@model IEnumerable<Book>

<div class="main-last-book">
    <div class="div-header">
        <span>
            آخرین کتاب ها
        </span>
        <div class="my-hr"></div>
    </div>
    <div class="owl-carousel owl-theme owl-last-book">

        <!--
                    کلاس
                text-cnter
                برای وسط چین کردن متن داخل اسپن چون به خود اپن میدادیم تاثیری نداشت
                روش دوم تنظیم
                text-align:center
                cssدر
                برای اسپن است
        -->
        @foreach (var item in Model)
        {
            <div class="img-thumbnail text-center mr-lg-5 mr-sm-2 mr-1 mb-1">
                <a asp-area="Admin" asp-controller="Book" asp-action="BookDetails" asp-route-id="@item.BookId">
                    <img src="@ViewBag.imgPath@item.BookImage" />           <!--نمایش تصویر کتاب-->
                    <div class="book-hr"></div>
                    <span>@item.BookName</span>                             <!--نمایش نام کتاب-->
                </a>
            </div>
        }


    </div>
</div>
