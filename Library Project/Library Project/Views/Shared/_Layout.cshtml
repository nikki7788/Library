<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library</title>
    <environment include="Development">

        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        <link href="~/css/bootstrap-rtl-moosavi.css" rel="stylesheet" />
        <link href="~/css/owl.carousel.min.css" rel="stylesheet" />
        <link href="~/css/owl.theme.default.min.css" rel="stylesheet" />
        <link href="~/font/fontawesome-free-5.4.1-web/css/all.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link href="~/css/MyStyleSheet.css" rel="stylesheet" />
        <link href="~/lib/Creating-Responsive-Mobile-friendly-Tables-with-jQuery-Table-Mobilize/dist/theme-default.css" rel="stylesheet" />
        <link href="~/lib/jquery-ui-1.12.1.custom/jquery-ui.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/4.1.3/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>


    <!--Start main-container-->
    <div class="container-fluid " id="main-container">
        <div class="site-header-text">
            <div id="topline"></div>
        </div>

        @*start main-menu*@
        <div id="main-menu">

            @*start nav*@
            <nav class="navbar navbar-expand-md bg-light navbar-light">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/storeicon1.png" id="brand-icon" />
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse  " id="collapsibleNavbar">
                        <ul class="navbar-nav px-md-2 ">
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">
                                    خانه
                                    <span class="fa fa-home"></span>
                                </a>

                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Home" asp-action="About" class="nav-link">
                                    درباره ما
                                    <span class="fa fa-info"></span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Home" asp-action="Contact" class="nav-link">
                                    ارتباط با ما
                                    <span class="fa fa-phone"></span>
                                </a>
                            </li>
                            @*<li class="nav-item">
                                    <a asp-area="" asp-controller="Account" asp-action="Login" class="nav-link">
                                        ورود
                                        <span class="fa fa-arrow-left"></span>
                                    </a>
                                </li>*@
                        </ul>

                        @await Html.PartialAsync("_UserStateIconPartial")

                    </div>
                  
                        <div class="d-sm-none navbar-collapse justify-content-end " id="collapsibleNavbar">
                            <ul class="navbar-nav ">
                                <li class="nav-item text-center">@RenderSection("SearchSection", false)</li>
                            </ul>
                        </div>
                </div>
            </nav> @*End nav*@


        </div> @*End main-menu*@
        <div class="container">
            @RenderBody()
            
            <footer ></footer>
        </div>
    </div><!--End main-container-->



    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/jquery-ui-1.12.1.custom/jquery-ui.min.js"></script>
        <script src="~/js/owl.carousel.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/src/jquery.unobtrusive-ajax.js"></script>
        <script src="~/lib/sweetalert2/dist/sweetalert2.all.min.js"></script>
        <script src="~/lib/Creating-Responsive-Mobile-friendly-Tables-with-jQuery-Table-Mobilize/src/jquery.tableMobilize.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/4.1.3/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>

        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
