
@model IEnumerable<ApplicationRoleViewModel>

@{
    ViewData["Title"] = "لیست نقش ها";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card mt-3">
    <div class="card-header bg-primary text-light">
        لیست نقش ها
    </div>
    <div class="card-body">
        <div class="btn-group">
            <a class="btn btn-primary" id="show-add-user" data-toggle="modal" asp-action="AddRole">
                <i class="fa fa-plus"></i>
                <span> افزودن نقش جدید</span>
            </a>
        </div>
        <div></div>
        <table class="table table-striped table-bordered table-sm mt-3">
            <thead class="table-light ">
                <tr>
                    <th>نام نقش</th>
                    <th>توضیحات</th>
                    <th>تعداد کاربر</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.NumberOfUsers</td>
                        <td>
                            <div>
                                <a class="btn btn-info" id="show-edit-user" data-toggle="modal" asp-action="EditRole">
                                    <i class="fa fa-pen"></i>
                                    <span>ویرایش نقش</span>
                                </a>
                                <a class="btn btn-danger" id="show-delete-user" data-toggle="modal" asp-action="DeleteRole">
                                    <i class="fa fa-trash"></i>
                                    <span>حذف نقش</span>
                                </a>
                            </div>
                        </td>
                    </tr>


                }
            </tbody>
        </table>
    </div>
</div>