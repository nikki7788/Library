@model News

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "جزییات خبر";
}


<div class="card mt-3" id="news-details">
    <div class="card-header bg-primary text-light"><h4>اخبار و اطلاعیه ها</h4></div>
    <div class="card-body  ">
        <table class="table table-borderless table-responsive-sm border-bottom">
            <thead class="thead-light ">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.NewsTitle)</th>
                    <th>@Html.DisplayNameFor(model => model.NewsContent)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="px-5"> @Html.DisplayFor(model => model.NewsTitle)</td>
                    <td class="text-justify"> @Html.Raw(Model.NewsContent)</td>
                </tr>
            </tbody>

        </table>

        <div class="text-left" style="font-size:16px">
            <span class="text-black-50 ">@Html.DisplayNameFor(model => model.NewsDate):</span>
            <span class="text-info ">@Html.DisplayFor(mode => Model.NewsDate)</span>
        </div>

