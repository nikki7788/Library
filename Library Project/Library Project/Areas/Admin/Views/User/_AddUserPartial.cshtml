
@model UserViewModel
<!--Modal header-->
@await Html.PartialAsync("_ModalHeaderPartial", new ModalHeader { Heading = "افزودن کاربر" })

<!--Modal body-->
<div class="modal-body">
    <form asp-action="/" role="form">

        <!--کلاس "رو" برای اینکه مودال را به دو بخش عمودی تقسیم کنیم-->
        <div class="row">
            <div class="col-6">
                <!--برای در یک خط قرار دادن لیبل و اینپوت-->
                <div class="form-group row">
                    <label asp-for="FullName" class="col-form-label col-6"></label>
                    <input asp-for="FullName" class="form-control col-6" />
                </div>
                <div class="form-group row">
                    <label asp-for="UserName" class="col-form-label col-6"></label>
                    <input asp-for="UserName" class="form-control col-6" />
                </div>
                <div class="form-group row">

                    <label asp-for="ApplicationRoleId" class="col-form-label col-6"></label>
                    <select asp-for="ApplicationRoleId" asp-items="@Model.ApplicationRoles" class="form-control col-6">
                        <option>انتخاب نقش</option> 
                    </select>
                </div>
            </div>

            <div class="col-6 ">
                <div class="form-group row">
                    <label asp-for="Email" class="col-form-label col-5 "></label>
                    <input asp-for="Email" class="form-control col-6" />
                </div>
                <div class="form-group row">
                    <label asp-for="Password" class="col-form-label col-5"></label>
                    <input asp-for="Password" class="form-control col-6" />
                </div>
                <div class="form-group row">
                    <label asp-for="ConfirmPassword" class="col-form-label col-5"></label>
                    <input asp-for="ConfirmPassword" class="form-control col-6" />
                </div>
            </div>
        </div>
    </form>
</div>



<!--modal footer-->
@await Html.PartialAsync("_ModalFooterPartial", new ModalFooter { SubmitButtonText = "افزودن کاربر" })