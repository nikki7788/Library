<!-- we must add_viewImports to the Areas-admin-views as to be recognize by the views in this Area  -->
<!-- we must use the IEnumerable <> type becaue we defined a list of view Model -->
@*@model IEnumerable<UserListViewModel>*@

@model PagingList<UserListViewModel>
@{

    ViewData["Title"] = "لیست کاربران";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row w-100 px-sm-2">
    <!--پنل ادمین-->
    <div class="col-md-3 mr-lg-0 mr-sm-0 mr-md-0 mr-2">
        @await Html.PartialAsync("_AdminPanelPartial")
    </div>
    <!--برای اینکه کنار پنل داشبورد بیفتد-->
    <div class="col-md-9 col-md-9 mr-lg-0 mr-sm-0 mr-md-0 mr-2">
        <div class="card mt-3">
            <div class="card-header bg-primary text-light ">
                <div class="row justify-content-md-around">
                    <!--   را میدهیم تا متن هم تراز متن اینئوت شود col-form-label-->
                    <div class="col-md-8 col-form-label" style="font-weight:400;"> لیست کاربران</div>

                    <div class="col-md-4 my-2">
                        <form asp-action="SearchUser" method="post">

                            <div class="input-group ">
                                <input type="search" id="userSearch" name="userSearch" class="form-control" placeholder=" نام کاربر..." />
                                <div class="input-group-prepend ">
                                    <button type="submit" class="btn btn-success"><i class="fa fa-search "></i></button>
                                </div>
                            </div>

                        </form>
                    </div>

                </div>
            </div>
            <div class="card-body">
                <div class="btn-group">
                    <a class="btn btn-primary" id="show-add-user" data-toggle="modal" asp-action="AddUser"
                       data-target="#modal-action-user">
                        <i class="fa fa-plus"></i>
                        <span> افزودن کاربر</span>
                    </a>
                </div>
                <div></div>
                <table class="mt-3 table table-bordered table-striped table-sm tableMobilize">
                    <thead class="thead-light">
                        <tr>
                            <th>نام و نام خانوادگی</th>
                            <th>ایمیل</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>
                                    <a class="btn btn-info " id="show-edit-user" data-toggle="modal" asp-action="EditUser"
                                       data-target="#modal-action-user" asp-route-id="@item.Id">
                                        <i class="fa fa-pen"></i>
                                        <span>ویرایش</span>
                                    </a>
                                    <a class="btn btn-danger " id="show-delete-user" data-toggle="modal" asp-action="DeleteUser"
                                       data-target="#modal-action-user" asp-route-id="@item.Id">
                                        <i class="fa fa-trash"></i>
                                        <span>حذف</span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>

            <div class="row justify-content-center">
                <nav>
                    @await this.Component.InvokeAsync("Pager", new { PagingList = this.Model })
                </nav>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_ModalPartial", new BootstrapModel { Id = "modal-action-user", Size = ModalSize.Medium })

@section Scripts{

    <script src="~/js/Modal-js/user-index.js"></script>
    <script src="~/js/admin-panel.js"></script>
    <script>
        $(document).ready(function () {
            //ریسپانسیو کردن جدول-دستور پلاگین
            $('table').tableMobilize();
        });
    </script>

}