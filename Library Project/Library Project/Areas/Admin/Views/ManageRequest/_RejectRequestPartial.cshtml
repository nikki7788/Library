

@model IEnumerable<ManageReqestedBookViewModel>
<form asp-controller="ManageRequest" asp-action="RejectRequest">
    <!--modal header -->
    @await Html.PartialAsync("_ModalHeaderPartial", new ModalHeader { Heading = "رد درخواست" })

    <!--modal Body -->
    <div class="modal-body">
        <p class="text-center">
            <i class="fa fa-times-circle fa-3x  text-danger"></i>
        </p>
        @foreach (var item in Model)
        {
            <p class="font-weight-bold font text-center">
                آیا از رد درخواست کاربر
                <span class="text-danger p-1">" @item.UserFullName "</span>        @* دریافت نام ارسالی از اکشن*@
               به نام کتاب
                <span class="text-danger p-1">" @item.BookName "</span>
                مطمئن هستید؟
            </p>
        }

    </div>



    <!--modal footer -->
    @*@await Html.PartialAsync("_ModalFooterPartial", new ModalFooter { SubmitButtonText = "حذف نویسنده" })*@

    <div class="modal-footer justify-content-center">
        <button type="button" class="btn ml-2" data-dismiss="modal">برگشت </button>
        <input type="submit" id="btn-submit" value="حذف نویسنده" class="btn btn-danger " />
    </div>
</form>